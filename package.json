{
  "name": "littil-org-website",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npx jest",
    "openapi": "openapi-generator-cli generate -i ./openapi.json -g typescript-angular -o src/app/api/generated"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/cdk": "^13.1.3",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/material": "^13.3.2",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "jest-junit": "^13.1.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.4",
    "@angular/cli": "~13.1.4",
    "@angular/compiler-cli": "~13.1.0",
    "@ngneat/spectator": "^10.0.1",
    "@openapitools/openapi-generator-cli": "^2.5.1",
    "@tailwindcss/forms": "^0.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.14.5",
    "autoprefixer": "^10.4.4",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.1.1",
    "ng-mocks": "^13.4.0",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "typescript": "~4.5.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "coveragePathIgnorePatterns": ["<rootDir>/src/app/api/generated"],
    "reporters": [
      "default"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
